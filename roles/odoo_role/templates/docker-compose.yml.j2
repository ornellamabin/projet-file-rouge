version: '3.8'

services:
  {{ odoo_service_name }}:
    image: odoo:13.0
    container_name: {{ odoo_container_name }}
    ports:
      - "8069:8069"
    depends_on:
      - postgres
    environment:
      - HOST=postgres
      - USER=odoo
      - PASSWORD=odoo
    networks:
      - {{ network_name }}

  postgres:
    image: postgres:13
    container_name: {{ postgres_container_name }}
    environment:
      - POSTGRES_DB=postgres
      - POSTGRES_PASSWORD=odoo
      - POSTGRES_USER=odoo
      - PGDATA=/var/lib/postgresql/data/pgdata
    volumes:
      - {{ postgres_volume_path }}:/var/lib/postgresql/data
    networks:
      - {{ network_name }}

networks:
  {{ network_name }}:
    name: {{ network_name }}

volumes:
  postgres_data:
    driver: local
    driver_opts:
      type: none
      device: {{ postgres_volume_path }}
      o: bind
