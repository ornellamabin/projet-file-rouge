version: '3.8'
services:
  postgres:
    image: postgres:13
    environment:
      - POSTGRES_DB=postgres
      - POSTGRES_USER={{ postgres_user }}
      - POSTGRES_PASSWORD={{ postgres_password }}
    networks:
      - {{ network_name }}
    volumes:
      - postgres-data:/var/lib/postgresql/data

  odoo:
    image: odoo:{{ odoo_version }}
    depends_on:
      - postgres
    ports:
      - "8069:8069"
    networks:
      - {{ network_name }}
    volumes:
      - {{ data_directory }}:/var/lib/odoo
    environment:
      - HOST=postgres
      - USER={{ postgres_user }}
      - PASSWORD={{ postgres_password }}

networks:
  {{ network_name }}:
    driver: bridge

volumes:
  postgres-data:
  {{ volume_name }}:
    driver: local
